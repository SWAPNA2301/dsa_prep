import java.util.HashMap;

class Solution {
    public int lengthOfLongestSubstring(String s) {
        // Map to store the last index of each character
        HashMap<Character, Integer> lastIndex = new HashMap<>();
        
        int maxLen = 0;
        int left = 0;  // left pointer of the sliding window
        
        for (int right = 0; right < s.length(); right++) {
            char ch = s.charAt(right);
            
            // If character is already in map and inside current window
            if (lastIndex.containsKey(ch) && lastIndex.get(ch) >= left) {
                // Move left pointer to one position after the previous index of ch
                left = lastIndex.get(ch) + 1;
            }
            
            // Update last seen index of current character
            lastIndex.put(ch, right);
            
            // Update max length
            int windowLen = right - left + 1;
            if (windowLen > maxLen) {
                maxLen = windowLen;
            }
        }
        
        return maxLen;
    }
}
